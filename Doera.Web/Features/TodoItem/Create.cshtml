@using Doera.Web.ViewModels
@model CreateTodoItemVM

@{
    ViewData["Title"] = "Create item";
    ViewData["Breadcrumbs"] = new BreadcrumbsVM(
        new BreadcrumbSegment("List", Url.Action("Index","TodoList", new { id = Model.TodoListId })),
        new BreadcrumbSegment("Task"),
        new BreadcrumbSegment("Create", Active: true)
    );
}

<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h4 m-0">Add item</h1>
        <a asp-controller="TodoList" asp-action="Index" asp-route-id="@Model.TodoListId" class="btn btn-sm btn-outline-secondary">Back to list</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-controller="TodoItem" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                @await Html.PartialAsync("Partials/_TodoItemFormFields.cshtml", Model)

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-controller="TodoList" asp-action="Index" asp-route-id="@Model.TodoListId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}