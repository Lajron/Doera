@using Doera.Web.ViewModels
@model EditTodoListVM

@{
    ViewData["Title"] = "Edit list";
    ViewData["Breadcrumbs"] = new BreadcrumbsVM(
            new BreadcrumbSegment(Model.Name, Url.Action("Index", "TodoList", new { id = Model.Id })),
            new BreadcrumbSegment("Edit", Url.Action("Edit", "TodoList", new { id = Model.Id }), true)
        );
}

<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h4 m-0">Edit list</h1>
        <a asp-controller="TodoList" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Back</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-controller="TodoList" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-controller="TodoList" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}