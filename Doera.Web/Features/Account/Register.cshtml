@model RegisterAccountVM

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card border-0" style="width: 350px; height: 400px;">

        <h4 class="text-center mb-4">Register</h4>

        <form asp-controller="Account" asp-action="Register" method="post" class="h-100">
            @Html.AntiForgeryToken()
            <div class="shadow-sm d-flex flex-column gap-3 p-4">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <input asp-for="Email" class="form-control" placeholder="Email Address" />
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </div>

                <hr class="m-0" />

                <div class="text-center small">
                    <a asp-controller="Account" asp-action="Login" class="text-decoration-none text-primary fw-semibold">
                        Already have an account? Log in
                    </a>
                </div>
            </div>

            <div class="text-danger mt-2 small d-flex justify-content-center">
                <div asp-validation-summary="All"></div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}