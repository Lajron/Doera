@using Doera.Application.DTOs.Tags
@using Doera.Application.DTOs.TodoItem
@using Doera.Web.ViewModels
@model TodoItemFilter
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Breadcrumbs"] = new BreadcrumbsVM();
    ViewData["Filter"] = Model;
}

@section Tags {
    @await Component.InvokeAsync("GetTags", new { filter = new TagFilter()})
}

<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h3 m-0">Task Overview</h1>
        </div>
    </div>
    <div class="d-flex gap-2 flex-column">
        <div>
            <div class="col-8 d-flex flex-column gap-2">
            @await Html.PartialAsync("_TodoItemFilterBar", Model)
            </div>
            <div class="col-4 bg-white">
            </div>
        </div>
        <div class="d-flex gap-2">
            @await Component.InvokeAsync("GetTodoItems", new { filter = Model })

        </div>
    </div>
    
</div>
