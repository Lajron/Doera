@using Doera.Web.Features.Error.ViewModels
@model ErrorVM
@{
    var title = (string)(ViewData["Title"] ?? "Error");
    var detail = (string?)ViewData["Detail"];
    var status = ViewData["StatusCode"];
    var traceId = ViewData["TraceId"];
    var validation = ViewData["ValidationErrors"] as IDictionary<string, string[]>;

    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h1 class="h4 mb-2">@Model.Title</h1>
            <p class="text-muted mb-1">Status: <strong>@Model.StatusCode</strong></p>
            @if (!string.IsNullOrWhiteSpace(Model.Detail)) {
                <p class="mb-2">@Model.Detail</p>
            }
            <div class="small text-muted">
                <div>TraceId: @Model.TraceId</div>
                @if (!string.IsNullOrWhiteSpace(Model.Path)) {
                    <div>Path: @Model.Path@if (!string.IsNullOrWhiteSpace(Model.QueryString)) {<text>@Model.QueryString</text>}</div>
                }
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.ExceptionMessage)) {
                <hr />
                <details>
                    <summary>Exception details (dev)</summary>
                    <pre class="mt-2 mb-0 text-danger" style="white-space:pre-wrap">
                    @Model.ExceptionMessage
                    @Model.StackTrace
                    </pre>
                </details>
            }

            <div class="mt-3 d-flex gap-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-primary">Go Home</a>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="history.back()">Back</button>
            </div>
        </div>
    </div>
</div>