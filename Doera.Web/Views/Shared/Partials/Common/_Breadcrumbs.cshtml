@using Doera.Web.ViewModels

@{
    var crumbs = ViewData["Breadcrumbs"] as BreadcrumbsVM;
    var segs = crumbs?.Segments ?? Array.Empty<BreadcrumbSegment>();
}

<ol class="breadcrumb mb-0 bg-transparent d-flex align-items-center text-uppercase fs-5">

    <li class="breadcrumb-item">
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none  @(segs.Length == 0 ? "fw-bold" : "fw-semibold") text-primary">
            <span class="d-none d-sm-inline">Home</span>
        </a>
    </li>

    @for (int i = 0; i < segs.Length; i++) {
        var seg = segs[i];

        <li class="breadcrumb-item @(seg.Active ? "active" : "")" aria-current="@(seg.Active ? "page" : null)">
            <i class="bi bi-chevron-right fs-6 mx-1" aria-hidden="true"></i>

            @if (!string.IsNullOrWhiteSpace(seg.Url) && !seg.Active) {
                <a href="@seg.Url" class="text-decoration-none fw-semibold text-primary ">
                    @seg.Text
                </a>
            } else {
                <span class="fw-bold text-primary">@seg.Text</span>
            }
        </li>
    }
</ol>

<style>
    .breadcrumb-item::before {
        /* Set content to nothing to remove the default slash/divider */
        content: none !important;
    }
</style>