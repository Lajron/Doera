@using Doera.Application.DTOs.Tags
@using Doera.Web.ViewModels
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doera.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Doera.Web.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
</head>
<body data-bs-theme="light">
    <div class="container-fluid d-flex flex-nowrap p-0 vh-100 bg-light">
        <div id="sidebar" class="bg-white d-flex flex-column col-2 px-2 pt-2 gap-2 border-end border-secondary border-2">
            @await Html.PartialAsync("_SidebarMenu")
        </div>
        <div class="d-flex flex-column flex-grow-1">
            <div>
                @await Html.PartialAsync("_Navbar")
            </div>
            <div>
                @await RenderSectionAsync("Tags", required: false)
            </div>
            <div>
                @await RenderSectionAsync("Title", required: false)
            </div>
            <div>
                @RenderBody()
            </div>
        </div>

    </div>

    @*
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Doera.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js"></script>
    <script src="~/js/breadcrumbs.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("NToastNotify")    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

